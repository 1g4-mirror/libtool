dnl Initialize the mdemo package.
AC_INIT(main.c)
AM_INIT_AUTOMAKE(mdemo,0.1)

AC_PROG_CC
AC_C_CONST
AC_EXEEXT
AC_LIBTOOL_DLOPEN
AM_PROG_LIBTOOL

if ${CONFIG_SHELL} ./libtool --features | grep "enable static" >/dev/null; then
  STATIC=-static
else
  STATIC=
fi
AC_SUBST(STATIC)

AC_CHECK_HEADERS(math.h)

AC_CHECK_LIBM

dnl Output the makefile
AC_OUTPUT(Makefile)
